<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ApkPublicMainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/editText_hint_apk"
                android:id="@+id/editText_apk"
                android:layout_weight="4"
                android:layout_gravity="top" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_add_product"
                android:id="@+id/button_add_apk" />
        </LinearLayout>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:hint="@string/editText_hint_url"
            android:inputType="textUri"
            android:id="@+id/editText_url"
            android:layout_weight="1"
            android:layout_gravity="bottom" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listview_apk_publics"
        android:layout_gravity="center_horizontal" />
</LinearLayout>